{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "preserveSymlinks": false,
    "declaration": true,
    "declarationDir": "dist",
    "jsx": "react",
    "outDir": "dist",

    /* Bundler mode */
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "preserveConstEnums": true,
    "noEmit": true,
  },
  "exclude": ["node_modules", "src/**/*.test.tsx", "src/**/*.test.ts"],
  "include": ["**/*.ts", "**/*.tsx"],
}
